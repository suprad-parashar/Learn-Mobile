<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackgroundColor"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/add_resource"
        app:titleTextColor="@color/primaryTextColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_name"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/resource_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:textColorHint="@color/secondaryTextColor"
                    app:layout_constraintTop_toBottomOf="@id/blank_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_title"
                    android:padding="4dp"
                    android:text="@string/title"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_currently_in"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/resource_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@id/blank_currently_in" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/dropdown"
                    android:src="@drawable/ic_drop_down"
                    app:layout_constraintBottom_toBottomOf="@id/resource_domain"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/resource_domain" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_domain"
                    android:padding="4dp"
                    android:text="@string/domain"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_branch"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/resource_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:dropDownSelector="@drawable/ic_drop_down"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@id/blank_branch" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/dropdown"
                    android:src="@drawable/ic_drop_down"
                    app:layout_constraintBottom_toBottomOf="@id/resource_branch"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/resource_branch" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_title"
                    android:padding="4dp"
                    android:text="@string/branch"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_course"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/resource_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:dropDownSelector="@drawable/ic_drop_down"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@id/blank_course" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/dropdown"
                    android:src="@drawable/ic_drop_down"
                    app:layout_constraintBottom_toBottomOf="@id/resource_course"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/resource_course" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_course"
                    android:padding="4dp"
                    android:text="@string/course"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_board_university"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/resource_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:dropDownSelector="@drawable/ic_drop_down"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@id/blank_board_university" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/dropdown"
                    android:src="@drawable/ic_drop_down"
                    app:layout_constraintBottom_toBottomOf="@id/resource_type"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/resource_type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_title"
                    android:padding="4dp"
                    android:text="@string/type"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_institution"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/resource_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:textColorHint="@color/secondaryTextColor"
                    app:layout_constraintTop_toBottomOf="@id/blank_institution" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_link"
                    android:padding="4dp"
                    android:text="@string/link"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/blank_pre"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/resource_prerequisites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_box_border"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:textColorHint="@color/secondaryTextColor"
                    app:layout_constraintTop_toBottomOf="@id/blank_pre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/primaryBackgroundColor"
                    android:labelFor="@id/resource_prerequisites"
                    android:padding="4dp"
                    android:text="@string/prerequisites"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/save_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_filled"
                android:padding="16dp"
                android:text="@string/add_resource" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>