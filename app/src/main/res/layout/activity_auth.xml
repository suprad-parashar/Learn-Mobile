<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.learn.android.activities.AuthActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/lightest"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/illustration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/learn_logo"
            android:contentDescription="@string/illustration"
            android:padding="16dp"
            android:src="@drawable/illustration_1_analyse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <ImageView
            android:id="@+id/learn_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/learn_logo"
            android:src="@drawable/learn_logo"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/learn_logo"
            android:gravity="center"
            android:text="@string/title_learn"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@id/illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/learn_logo"
            app:layout_constraintWidth_percent="0.2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/auth_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/rounded_top_div"
        android:orientation="vertical"
        android:paddingStart="35dp"
        android:paddingTop="35dp"
        android:paddingEnd="35dp" />

</LinearLayout>