<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learn.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.learn.android.Learn"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.learn.android.activities.learn.CourseDocumentViewActivity" />
        <activity android:name="com.learn.android.activities.learn.SyllabusViewActivity" />
        <activity android:name="com.learn.android.activities.learn.CourseVideoViewActivity" />
        <activity android:name="com.learn.android.activities.learn.CourseViewActivity" />
        <activity
            android:name="com.learn.android.activities.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name="com.learn.android.activities.auth.RegistrationActivity"
            android:parentActivityName="com.learn.android.activities.auth.LoginActivity" />
        <activity android:name="com.learn.android.activities.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>